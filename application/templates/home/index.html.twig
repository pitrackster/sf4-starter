{% extends 'base.html.twig' %}

{% block title %}
    Home
{% endblock %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{asset('build/home.css')}}">
{% endblock %}

{% block body %}
    <h1 class="home-title">This is the home page!</h1>
    <div class="row">
        <div class="col text-center">
            <span>I am a (centered) text inside a bootstrap column</span>
        </div>
        <div class="col text-center">
            <button class="btn btn-light" data-toggle="popover" id="write-to-console" title="look in js console!" type="button">
                I am a (centered) button. Click me to write a translated word into js console
            </button>
        </div>
        <div class="col text-center">
            <button class="btn btn-light" data-toggle="tooltip" title="beautiful isn't it?!" type="button">
                I am a (centered) button and I am tooltiped
            </button>
        </div>
    </div>
    <div class="modal" id="modal-test" role="dialog" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">This is the bootstrap modal title</h5>
                    <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>body text goes here.</p>
                    <p>you can write plenty of it...</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="button">Save changes</button>
                    <button class="btn btn-secondary" data-dismiss="modal" type="button">Close</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('build/home.js') }}"></script>
{% endblock %}
